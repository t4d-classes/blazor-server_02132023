@using ToolsApp.Components
@inherits LayoutComponentBase

<PageTitle>ToolsApp.Web</PageTitle>

<CascadingValue Value="_toolsAppTheme" Name="UITheme">
  <div class="page">
      <div class="sidebar">
          <NavMenu />
      </div>
      <main>
          <div class="top-row px-4">
              <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
          </div>

          <article class="content px-4">
              @Body
          </article>
      </main>
  </div>
</CascadingValue>

@code {

  private UITheme _toolsAppTheme = new()
    {
      PrimaryButton = new()
      {
        BackgroundColor = "navy",
        TextColor = "white",
      },
      SecondaryButton = new()
      {
        BackgroundColor = "gray",
        TextColor = "black",
      },
      DangerButton = new()
      {
        BackgroundColor = "darkred",
        TextColor = "white",
      }
    };

}
