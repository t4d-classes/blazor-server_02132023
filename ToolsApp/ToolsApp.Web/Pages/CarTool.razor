@page "/car-tool"

@using ToolsApp.Components.CarTool

<ToolHeader HeaderText="Car Tool" />

<CarTable Cars="@cars" OnDeleteCar="@deleteCar"></CarTable>

<CarForm ButtonText="Add Car" OnSubmitCar="@addCar" />

@code {

  private List<ICar> cars = new List<ICar>()
  {
    new Car() { Id = 1, Make="Ford", Model="Fusion Hybrid", Year=2020, Color="Blue", Price=45000 },
    new Car() { Id = 2, Make="Tesla", Model="S", Year=2022, Color="Red", Price=115000 },
  };


  private void addCar(NewCar newCar)
  {
    cars.Add(new Car()
      {
        Id = cars.Any() ? cars.Max(c => c.Id) + 1 : 1,
        Make = newCar.Make,
        Model = newCar.Model,
        Year = newCar.Year,
        Color = newCar.Color,
        Price = newCar.Price,
      });
  }

  private void deleteCar(int carId)
  {
    cars.Remove(cars.Find(c => c.Id == carId));
  }



}
