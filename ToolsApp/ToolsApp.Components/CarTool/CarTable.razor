<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @if(!Cars.Any())
    {
      <tr>
        <td colspan="7">No cars.</td>
      </tr>
    }
    @foreach (var car in Cars)
    {
      <CarViewRow Car="@car" OnDeleteCar="@deleteCar" />
    }
  </tbody>

</table>


@code {

  [Parameter]
  public List<ICar> Cars { get; set; } = new List<ICar>();

  [Parameter]
  public EventCallback<int> OnDeleteCar { get; set; }

  public async Task deleteCar(int carId)
  {
    await OnDeleteCar.InvokeAsync(carId);
  }

}
