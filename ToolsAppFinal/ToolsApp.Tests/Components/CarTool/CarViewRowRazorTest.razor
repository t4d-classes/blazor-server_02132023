@inherits TestContext

@code {

  [Fact]
  public void CarViewRowComponentRendersCorrectly()
  {
    // Arrange

    var car = new Car
      {
        Id = 1,
        Make = "Ford",
        Model = "Fusion Hybrid",
        Year = 2020,
        Color = "blue",
        Price = 45000.0M
      };

    // Act

    var cut = Render(@<CarViewRow Car="@car" />);

    // Assert

    cut.MarkupMatches(@<tr>
        <td>@car.Id</td>
        <td>@car.Make</td>
        <td>@car.Model</td>
        <td>@car.Year</td>
        <td>@car.Color</td>
        <td>@car.Price</td>
        <td>
          <button type="button">Edit</button>
          <button type="button">Delete</button>
        </td>
      </tr>);

  }


}
